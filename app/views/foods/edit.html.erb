<%= form_with model: @food, url: food_path, method: :patch, local: true do |f| %>
  <div class="new-contents">
    <h1 class="new-box">お店の口コミを編集してみよう！！</h1>
    <%= f.text_field :store, class: "new-store", placeholder: "店舗名" %>
    <h3 class="new-genre">お店のジャンル</h3>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, { class: "select-box", id: "food-genre" }) %>
    <%= f.text_area :content, class: "new-content", placeholder: "口コミを入力してください" %>
    <%= f.file_field :image, class:"new-image-form" %>
    <%= f.submit "口コミを投稿", class:"new-btn" %>
  </div>
<% end %>